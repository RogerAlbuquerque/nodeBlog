{{#each error}}
  <div class="alert alert-danger"> {{text}} </div>
{{else}}
{{/each}}


<div class="card">
  <div class="card-body">
    <h4>Editar postagem: </h4>
    <form action="/admin/posts/edit" method="post">
      <input type="hidden" value="{{posts._id}}" name="id">

      <label for="title">Título:</label>        
      <input type="text" name="title" class="form-control" value="{{posts.title}}" required>

      <label for="slug">Slug:</label>        
      <input type="text" name="slug" class="form-control" value="{{posts.slug}}" required>

      <label for="description">Descrição:</label>        
      <input type="text" name="description" class="form-control" value="{{posts.description}}" required>

      <label for="content">Conteudo:</label>
      <textarea name="content" class="form-control" required>{{posts.content}}</textarea>

      <label for="categori">Categoria:</label>
        <select name="categori" class="custom-select" required>
          {{#each categories}}
            <option value="{{_id}}">{{name}}</option>
            
            {{else}}
            <option value="0">Nenhum categoria registrada</option>
          {{/each}}
        </select> <br>
      <button class="btn btn-success mt-4"> Editar postagem </button>
        
        

    </form>
  </div>
</div>