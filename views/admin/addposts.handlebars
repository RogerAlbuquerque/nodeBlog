<div class="card">
  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="" method="post">
      <label for="title">Título:</label>        
      <input type="text" name="title" class="form-control">

      <label for="slug">Slug:</label>        
      <input type="text" name="slug" class="form-control">

      <label for="description">Descrição:</label>        
      <input type="text" name="description" class="form-control">

      <label for="conteudo">Conteudo:</label>
      <textarea name="conteudo" class="form-control"></textarea>

      <label for="categori">Categoria:</label>
        <select name="categori" class="custom-select">
          {{#each categori}}
            <option value="{{_id}}">{{name}}</option>
            
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select> <br>
      <button class="btn btn-success mt-4"> Criar postagem </button>
        
        

    </form>
  </div>
</div>