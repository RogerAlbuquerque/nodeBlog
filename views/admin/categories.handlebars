
<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categories/add">
  <button class="btn btn-success">Nova Categoria</button> 
</a>

{{#each categories}}
  
  <div class="card mt-4">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small> <br>
        <small>Data: {{date}}</small>
    </div>
  </div>

{{else}}
{{/each}}