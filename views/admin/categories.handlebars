
<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categories/add">
  <button class="btn btn-success">Nova Categoria</button> 
</a>

{{#each categories}}
  
  <div class="card mt-4">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small> <br>
        <small>Data: {{date}}</small>
       <a href="/admin/categories/edit/{{_id}}"> 
        <button class="bttn btn-success mt-4">
          Editar categoria          
        </button>
        </a>
    </div>
  </div>

{{else}}
{{/each}}