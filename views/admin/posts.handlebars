<h2>Lista de postagens</h2>
<hr>
<a href="/admin/posts/add">
  <button class="btn btn-success">Nova postagem</button> 
</a>

{{#each posts}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{title}}</h4>
      <p> Descrição: {{description}} </p>
      <small>Date: {{date}} </small> <br>
      <small>Categoria:  {{categori.name}} </small><br>
      <a href="/admin/posts/edit/{{_id}}"> <button class="btn btn-success mt-4"> Editar postagem</button> </a>
    </div>
  </div>

{{else}}
  <p>Nenhuma postagem registrada</p>
{{/each}}